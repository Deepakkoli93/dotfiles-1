#!/usr/bin/env bash

# text to be displayed
text=FOCUS
duration=5

# set text and duration if passed as args
[[ ! -z $1 ]] && text=${1}
[[ ! -z $2 ]] && duration=${2}

colors=(White Green Blue Red Orange)
colors_num=${#colors[@]}
color=${colors[$(($RANDOM % colors_num))]}

dzen2 -p ${duration} -l 40 -sa c -fn "Comic Sans MS:size=200" -e 'onstart=uncollapse' <<EOF
^fg(${color})${text}^bg()
EOF

